@model Reposit.Models.Category

@{
    string quoteName = $"\"{@Model.Title}\"";
    ViewData["Title"] = @Model.Title;
    ViewData["Description"] = $"This will erase the {quoteName} category and all its containing snippets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-default" />
        @*<a asp-action="Index"><h6 class="d-inline">Back to Categories</h6></a>*@

        <a asp-action="Index"><button class="btn btn-default">Cancel</button></a>
    </form>
</div>
